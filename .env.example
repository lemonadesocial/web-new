# =============================================================================
# web-new Environment Variables
# =============================================================================
# Copy this file to .env and fill in the values.
#
# Variables prefixed with NEXT_PUBLIC_ are exposed to the browser bundle.
# All other variables are server-only (never sent to the client).
#
# Required variables are marked [REQUIRED]. The app will not function without them.
# Optional variables are marked [OPTIONAL] and have sensible defaults or enable
# non-critical features.
# =============================================================================

# -----------------------------------------------------------------------------
# Core API & Backend
# -----------------------------------------------------------------------------

# [REQUIRED] Main Lemonade backend GraphQL endpoint
NEXT_PUBLIC_GRAPHQL_URL=

# [REQUIRED] Lemonade backend REST base URL (file uploads, deep links, etc.)
NEXT_PUBLIC_LMD_BE=

# [OPTIONAL] Server-side GraphQL URL — used by tRPC procedures that query the
# backend internally. Falls back to NEXT_PUBLIC_GRAPHQL_URL if not set.
INTERNAL_GRAPHQL_URL=

# [OPTIONAL] Backend admin API URL — used by server-side NFT admin operations
BACKEND_ADMIN_URL=

# -----------------------------------------------------------------------------
# Authentication (Ory)
# -----------------------------------------------------------------------------

# [REQUIRED] Ory Kratos public URL — handles login, registration, password reset
NEXT_PUBLIC_KRATOS_PUBLIC_URL=

# [REQUIRED] Ory Hydra public URL — handles OAuth2/OIDC flows
NEXT_PUBLIC_HYDRA_PUBLIC_URL=

# [REQUIRED] Identity service URL — wallet auth, Farcaster connect, session mgmt
NEXT_PUBLIC_IDENTITY_URL=

# [OPTIONAL] Name of the auth session cookie. Defaults to the Kratos default
# if not set. Only needed when running multiple environments on the same domain.
NEXT_PUBLIC_AUTH_COOKIE_NAME=

# -----------------------------------------------------------------------------
# Domain & Environment
# -----------------------------------------------------------------------------

# [REQUIRED] Primary Lemonade domain (e.g., "lemonade.social" or
# "staging.lemonade.social"). Used for multi-tenant routing and cookie scope.
NEXT_PUBLIC_LEMONADE_DOMAIN=

# [REQUIRED] Current environment: "staging" or "production". Controls chain IDs,
# feature flags, and service endpoints.
NEXT_PUBLIC_APP_ENV=

# [OPTIONAL] Server-side environment flag. Same values as NEXT_PUBLIC_APP_ENV.
# Used by minting utilities and passport services.
APP_ENV=

# [OPTIONAL] Public-facing host URL (e.g., "https://staging.lemonade.social").
# Used for generating share links and deep link redirects.
NEXT_PUBLIC_HOST_URL=

# [OPTIONAL] CDN prefix for static assets (e.g., CloudFront distribution URL).
# Leave empty to serve assets from the app origin.
NEXT_PUBLIC_ASSET_PREFIX=

# [OPTIONAL] Enable whitelabel/multi-tenant features. Set to "true" to enable.
NEXT_PUBLIC_ENABLE_WHITELABEL=

# -----------------------------------------------------------------------------
# Web3 & Wallet
# -----------------------------------------------------------------------------

# [REQUIRED] Wallet service HTTP endpoint — GraphQL API for on-chain operations
NEXT_PUBLIC_WALLET_HTTP_URL=

# [OPTIONAL] Wallet service WebSocket endpoint — real-time wallet events
NEXT_PUBLIC_WALLET_WSS_URL=

# [REQUIRED] Reown (formerly WalletConnect v2) project ID.
# Get one at https://cloud.reown.com/
NEXT_PUBLIC_REOWN_PROJECT_ID=

# [OPTIONAL] Legacy WalletConnect project ID — used by wagmi config.
# Can be the same as REOWN_PROJECT_ID.
NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID=

# [REQUIRED] Thirdweb client ID for SDK features.
# Get one at https://thirdweb.com/dashboard
NEXT_PUBLIC_THIRDWEB_CLIENT_ID=

# [OPTIONAL] Unicorn factory smart contract address — used for token launches
NEXT_PUBLIC_UNICORN_FACTORY_ADDRESS=

# -----------------------------------------------------------------------------
# Lens Protocol & Social
# -----------------------------------------------------------------------------

# [REQUIRED for Lens features] Lens Protocol app ID
NEXT_PUBLIC_LENS_APP_ID=

# [OPTIONAL] Lens namespace for username resolution
NEXT_PUBLIC_LENS_NAMESPACE=

# [REQUIRED for Lens feed] On-chain address of the Lemonade Lens feed contract
NEXT_PUBLIC_LEMONADE_FEED_ADDRESS=

# [OPTIONAL] Airstack API URL — used for Farcaster social graph queries
NEXT_PUBLIC_AIRSTACK_URL=

# -----------------------------------------------------------------------------
# Indexers & Microservices
# -----------------------------------------------------------------------------

# [OPTIONAL] Metaverse HTTP endpoint — GraphQL for 3D/metaverse features
NEXT_PUBLIC_METAVERSE_HTTP_URL=

# [OPTIONAL] Lemonheads indexer URL — queries on-chain Lemonhead NFT data
NEXT_PUBLIC_LEMONHEADS_INDEXER_URL=

# [OPTIONAL] Coin indexer URL — queries on-chain token/coin data
NEXT_PUBLIC_COIN_INDEXER_URL=

# [OPTIONAL] Username indexer URL — resolves on-chain usernames
NEXT_PUBLIC_USERNAME_INDEXER=

# [OPTIONAL] Video service URL — video processing and streaming
NEXT_PUBLIC_LMD_VIDEO=

# -----------------------------------------------------------------------------
# AI Features
# -----------------------------------------------------------------------------

# [REQUIRED for AI features] AI service HTTP endpoint (lemonade-ai GraphQL)
NEXT_PUBLIC_AI_API_HTTP=

# [OPTIONAL] AI feature configuration JSON string
NEXT_PUBLIC_AI_CONFIG=

# -----------------------------------------------------------------------------
# Third-Party Services
# -----------------------------------------------------------------------------

# [REQUIRED] Google Maps API key — used for event location picker and maps.
# Get one at https://console.cloud.google.com/google/maps-apis
NEXT_PUBLIC_GOOGLE_MAP_KEY=

# [OPTIONAL] GIPHY API key — enables GIF picker in Lens posts.
# Get one at https://developers.giphy.com/
NEXT_PUBLIC_GIPHY_API_KEY=

# [OPTIONAL] IPFS gateway URL — resolves ipfs:// URIs to HTTP URLs
NEXT_PUBLIC_IPFS_GATEWAY_URL=

# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------

# [REQUIRED] MongoDB connection string — used by tRPC server procedures.
# Format: mongodb+srv://user:pass@cluster.mongodb.net/dbname
DATABASE_URL=

# -----------------------------------------------------------------------------
# Server-Only Secrets (never prefix with NEXT_PUBLIC_)
# -----------------------------------------------------------------------------

# [OPTIONAL] NocoDB access key — used for internal data operations
NOCODB_ACCESS_KEY=

# [OPTIONAL] Pinata JWT for launchpad NFT metadata uploads.
# Get one at https://app.pinata.cloud/
LAUNCHPAD_PINATA_JWT=

# [OPTIONAL] Pinata JWT for username NFT metadata uploads
USERNAME_PINATA_JWT=
